{% extends 'base.html.twig' %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <h2>Lista de usuarios</h2>

            <table>
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Usuario</th>
                    <th>Contrasena</th>
                    <th>Actiunea</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td><a href="{{ path('admin_user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.password|slice(0,12)}}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('admin_user_show', { 'id': user.id }) }}">ver</a>
                                </li>
                                <li>
                                    <a href="{{ path('admin_user_edit', { 'id': user.id }) }}">editar</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('admin_user_new') }}">Crear un nuevo usuario</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}